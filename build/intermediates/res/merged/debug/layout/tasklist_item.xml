<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#50bacb20"
      android:orientation="horizontal"
      >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:text="服务名称:"
        android:textColor="#80ffffff"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="管道维修"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#50bacb20"
      android:orientation="horizontal"
      >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:text="任务状态:"
        android:textColor="#80ffffff"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tv_status_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="发布中"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />
  </LinearLayout>
  <TextView
      android:id="@+id/tv_updatetime"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#50bacb20"
      android:gravity="center_horizontal"
      android:text="2016年5月3日 16:22:34"
      android:textColor="#ffffff"
      android:textSize="20sp"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="1dp"
      android:background="#50bacb20"
      android:gravity="center_horizontal"
      android:text="用户资料"
      android:textColor="#80ffffff"
      android:textSize="20sp"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:orientation="horizontal"
      >
    <com.loopj.android.image.SmartImageView
        android:id="@+id/siv_user_icon"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="手机号:"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_userid_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15861176555"
            android:textSize="18sp"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/ll_service_nick"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="用户昵称:"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_userneck_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实施试试"
            android:textSize="18sp"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/tv_seat_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="用户位置:"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_userseat_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常州江苏理工学院"
            android:textSize="18sp"
            />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="1dp"
      android:background="#50bacb20"
      android:gravity="center_horizontal"
      android:text="关于故障"
      android:textColor="#80ffffff"
      android:textSize="20sp"
      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="问题描述:"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_pro_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="坏了非常不好修"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#50bacb20"
        android:gravity="center_horizontal"
        android:text="问题图片"
        android:textColor="#80ffffff"
        android:textSize="20sp"
        />
    <com.loopj.android.image.MySmartImageView
        android:id="@+id/msiv_problem_image_task"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <Button
        android:id="@+id/btn_call_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/login_button"
        android:text="电话咨询"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        />
    <Button
        android:id="@+id/btn_gettask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/login_button"
        android:text="接单"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        />
  </LinearLayout>
</LinearLayout>