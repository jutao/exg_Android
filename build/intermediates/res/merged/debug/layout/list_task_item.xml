<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修进度:"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/tv_task_status_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单日期:"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_task_updatetime_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015.10.12"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修类别:"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_task_categoryname_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管道疏通"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修员名称:"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_req_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人才"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修员联系方式："
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_req_phone_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15861175678"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>